@model IEnumerable<OnlineLaundry.Models.service_subscription>
@{
    ViewBag.Title = "Monthly Subscription";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5" style="min-height: 50vh">
    <h2>Monthly Subscription</h2>
    <div class="row">
        @foreach (var item in Model) {
        <div class="col col-sm-6 col-md-4 col-lg-3 my-4">
            <div class="card d-flex" style="min-height: 250px">
                <img src="..." class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">Plan @item.subscription_id</h5>
                    <p class="card-text">@item.name</p>
                    <p class="card-text"><strong>@item.price</strong></p>
                </div>
                @Html.ActionLink("See Details", "SubscriptionServiceDetail", new { subscription_id = item.subscription_id }, new { @class = "btn btn-block btn-primary", @style = "font-size: 1em" })
            </div>
        </div>
        }
    </div>
</div>

