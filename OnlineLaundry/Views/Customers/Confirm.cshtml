@model OnlineLaundry.Models.customer_confirmation
@{
    ViewBag.Title = "Confirm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5, my-5">
    <h2>Confirm ur account</h2>
    @ViewBag.error
    @using (Html.BeginForm("Confirm", "customers", FormMethod.Post)) {
        @Html.AntiForgeryToken()

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.token, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.token, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.token, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <input type="submit" value="Submit verification code" class="btn btn-default" />
            <input type="hidden" name="confirmation_id" value='@Session["id"]'/>
        </div>
    }
</div>


